<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ClassScheduler.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ClassScheduler.Views.StudentView"
        x:DataType="vm:StudentViewModel"
        Background="#3A3A3A">
	
	<Design.DataContext>
		<vm:StudentViewModel/>
	</Design.DataContext>

	<DockPanel Margin="10">
		<TextBlock Text="Student Dashboard" DockPanel.Dock="Top" Margin="0 10 0 -15"
		           HorizontalAlignment="Center" VerticalAlignment="Top"
		           FontFamily="Arial" FontSize="30" Foreground="White"/>
		
        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="550">
        <ItemsControl ItemsSource="{Binding Courses}">
            <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Expander HorizontalAlignment="Stretch" Margin="20 0 20 7.5">
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="{Binding Code}" FontSize="16" FontWeight="Bold" Foreground="DodgerBlue"/>
                            <TextBlock Text=" | " Foreground="Gray"/>
                            <TextBlock Text="{Binding Location}" FontSize="16" Foreground="White"/>
                            <TextBlock Text=" | " Foreground="Gray"/>
                            <TextBlock Text="{Binding Schedule}" FontSize="16" Foreground="White"/>
                        </StackPanel>
                    </Expander.Header>
                
                    <StackPanel Margin="10">
                        <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" Foreground="DodgerBlue"/>
                        <TextBlock Text="{Binding Description}" FontSize="14" Foreground="White" TextWrapping="Wrap" Margin="0,5"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Instructor: " Foreground="DodgerBlue"/>
                            <TextBlock Text="{Binding Instructor}" FontSize="14" Foreground="White"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Meeting dates: " Foreground="DodgerBlue"/>
                            <TextBlock Text="{Binding Schedule.FormattedStartDate}"/>
                            <TextBlock Text=" - " Foreground="White"/>
                            <TextBlock Text="{Binding Schedule.FormattedEndDate}"/>
                        </StackPanel>
                    
                            <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Prerequisites: " Foreground="DodgerBlue"/>
                            <TextBlock Text="{Binding Prerequisites}" Foreground="White"/>
                        </StackPanel>
                    
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Credits: " Foreground="DodgerBlue"/>
                            <TextBlock Text="{Binding Credits}" FontSize="14" Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </Expander>
            </DataTemplate> </ItemsControl.ItemTemplate>
        </ItemsControl>
        </ScrollViewer>
		
	</DockPanel>
</UserControl>
        