<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ClassScheduler.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ClassScheduler.Views.StudentView"
        x:DataType="vm:StudentViewModel"
        Background="#3A3A3A"
        Title="ClassScheduler - Student Dashboard">
        
        <Design.DataContext>
                <vm:StudentViewModel/>
        </Design.DataContext>

    <Grid>
        <TextBlock Text="Welcome" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>
        <TextBlock Text="CPTS121" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20 -100"/>
        <StackPanel Margin="20" VerticalAlignment="Center">
            <Button Click="ClickHandler">View Course Info</Button>
            <TextBlock Margin="" x:Name="instructor"></TextBlock>
            <TextBlock Margin="0 10" x:Name="time"></TextBlock>
            <TextBlock Margin="0 10" x:Name="credits"></TextBlock>
            <TextBlock Margin="0 10" x:Name="prereqs"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
        