<Window x:Class="ClassScheduler.Views.ConfirmLogoutWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="475" Height="225"
        Background="#3A3A3A"
        CanResize="False"
        Title="">
    
    <Border Background="#3A3A3A" BorderThickness="2" Width="475" Height="225">
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Are you sure you want to logout?" FontSize="16" HorizontalAlignment="Center" Margin="0 10"/>
            </StackPanel>
        
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,5,5">
                <Button Content="Cancel" Width="70" 
                        Margin="0,0,5,0"
                        HorizontalContentAlignment="Center"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Click="OnCancelButtonSelect"/>
                <Button Content="Yes" Background="Blue" Width="70"
                        HorizontalContentAlignment="Center"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Click="OnYesButtonSelect"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>